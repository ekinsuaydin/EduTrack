@model IEnumerable<EduTrack.Models.Course>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>My Courses List</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Course Name
            </th>
            <th>
                Teacher Name
            </th>

            <th>
                
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Teacher.FullName)
                </td>


                <td>
                    <a asp-action="MyCourse" asp-route-id="@item.CourseID">Go To Course</a> 
                </td>
            </tr>
        }
    </tbody>
</table>
