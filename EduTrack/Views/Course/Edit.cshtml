@model EduTrack.Models.Course


@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CourseID" />
            <div class="form-group">
                <label asp-for="CourseName" class="control-label">Edit Course Name</label>
                <input asp-for="CourseName" class="form-control" />
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id" class="control-label">Edit Teacher</label>
                <select asp-for="Id"
                        class="form-control"
                        asp-items="@(new SelectList(ViewBag.Teachers,"Value","Text"))">
                </select>
                <span asp-validation-for="Id" class="text-danger"></span>

            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>

            <img src="~/Images/undraw_in_thought_re_qyxl.png" class="img-fluid" style="width: 100%; height: 100%; object-fit: contain;" />
        </section>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
