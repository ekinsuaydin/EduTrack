@model IEnumerable<EduTrack.Models.Enrollment>

@{
    ViewData["Title"] = "MyCourses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>My Courses List</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Course ID
            </th>
            <th>
                Student Full Name
            </th>

            <th>
                
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.FullName)
                </td>


                <td>
                    <a asp-action="MyCourse" asp-route-id="@item.CourseID">Go To Course</a>

                </td>
            </tr>
        }
    </tbody>
</table>

